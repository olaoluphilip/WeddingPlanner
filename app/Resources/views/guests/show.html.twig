{% extends 'base.html.twig' %}

{% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Guest {% endblock %}
{% block entity2 %}Guest {% endblock %}
{% block action %}Details {% endblock %}

{% block body %}
<div class="dr"><span></span></div>

<div class="row-fluid">

    <div class="span12">
        <div class="head clearfix">
            <div class="isw-grid"></div>
            <h1>Guest's Details</h1>
        </div>
        <div class="block-fluid table-sorting clearfix">
            <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
                <tbody>
                <tr>
                <th>Id</th>
                <td>{{ guest.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ guest.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ guest.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ guest.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ guest.phone }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ guest.sex }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ guest.role }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ guest.address }}</td>
            </tr>
        </tbody>
    </table>
</div>
    <ul>
        <li>
            <a href="{{ path('guests_index') }}"><button class="btn btn-link" type="button">Back to the list</button></a>
        </li>
        <li>
            <a href="{{ path('guests_edit', { 'guest': guest.id }) }}"><button class="btn btn-link" type="button">Edit</button></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <button class="btn" value="Delete">Delete</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
    </div>
{% endblock %}
