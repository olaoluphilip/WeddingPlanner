{% extends 'base.html.twig' %}

{% block body %}
    <h1>Guests</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ guest.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ guest.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ guest.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ guest.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ guest.phone }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ guest.sex }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ guest.role }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ guest.address }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('guests_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('guests_edit', { 'guest': guest.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
