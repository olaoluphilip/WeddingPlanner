{% extends 'base.html.twig' %}

{% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Guests {% endblock %}
{% block entity2 %}Guests {% endblock %}
{% block action %}List {% endblock %}

{% block body %}
<div class="dr"><span></span></div>

<div class="row-fluid">

    <div class="span12">
        <div class="head clearfix">
            <div class="isw-grid"></div>
            <h1>List of Guests</h1>
        </div>
        <div class="block-fluid table-sorting clearfix">
            <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
                <thead>
                <tr>
                    <th><input type="checkbox" name="checkall"/></th>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Sex</th>
                <th>Role</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guest in guests %}
            <tr>
                <td><input type="checkbox" name="checkbox"/></td>
                <td><a href="{{ path('guests_show', { 'guest': guest.id }) }}">{{ guest.id }}</a></td>
                <td>{{ guest.firstname }}</td>
                <td>{{ guest.lastname }}</td>
                <td>{{ guest.email }}</td>
                <td>{{ guest.phone }}</td>
                <td>{{ guest.sex }}</td>
                <td>{{ guest.role }}</td>
                <td>{{ guest.address }}</td>
                <td>
                    <div class="btn-group">
                        <button data-toggle="dropdown" class="btn dropdown-toggle">Action <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                        <li>
                            <a href="{{ path('guests_show', { 'guest': guest.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('guests_edit', { 'guest': guest.id }) }}">edit</a>
                        </li>
                    </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
            </table>
        </div>
        <ul>
            <li>
            <a href="{{ path('guests_new') }}"><button class="btn btn-link" type="button">Create a new entry</button></a>
            </li>
        </ul>
    </div></div>
{% endblock %}
