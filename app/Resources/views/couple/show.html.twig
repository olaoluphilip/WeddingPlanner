{% extends 'base.html.twig' %}

{% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Couple {% endblock %}
{% block entity2 %}Couple {% endblock %}
{% block action %}Details {% endblock %}

{% block body %}
<div class="dr"><span></span></div>

<div class="row-fluid">

    <div class="span12">
        <div class="head clearfix">
            <div class="isw-grid"></div>
            <h1>Couple's Details</h1>
        </div>
        <div class="block-fluid table-sorting clearfix">
            <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ couple.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ couple.firstname }}</td>
            </tr>
            <tr>
                <th>Middlename</th>
                <td>{{ couple.middlename }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ couple.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ couple.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ couple.phone }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ couple.sex }}</td>
            </tr>
            <tr>
                <th>Date of birth</th>
                <td>{% if couple.dob %}{{ couple.dob|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ couple.role }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ couple.image }}</td>
            </tr>
        </tbody>
    </table>
        </div>
    <ul>
        <li>
            <a href="{{ path('couple_index') }}"><button class="btn btn-link" type="button">Back to the list</button></a>
        </li>
        <li>
            <a href="{{ path('couple_edit', { 'couple': couple.id }) }}"><button class="btn btn-link" type="button">Edit</button></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <button class="btn" value="Delete">Delete</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
        </div>
    </div>
{% endblock %}
