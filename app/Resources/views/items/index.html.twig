{% extends 'base.html.twig' %}

{% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Items {% endblock %}
{% block entity2 %}Items {% endblock %}
{% block action %}List {% endblock %}

{% block body %}
<div class="dr"><span></span></div>

<div class="row-fluid">

    <div class="span12">
        <div class="head clearfix">
            <div class="isw-grid"></div>
            <h1>List of Items</h1>
        </div>
        <div class="block-fluid table-sorting clearfix">
            <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
                <thead>
                <tr>
                    <th><input type="checkbox" name="checkall"/></th>
                <th>Id</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Amount Paid</th>
                <th>Balance</th>
                <th>Payment Duedate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td><input type="checkbox" name="checkbox"/></td>
                <td><a href="{{ path('items_show', { 'item': item.id }) }}">{{ item.id }}</a></td>
                <td>{{ item.name }}</td>
                <td>{{ item.amount }}</td>
                <td>{{ item.status }}</td>
                <td>{% if item.startDate %}{{ item.startDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ item.endDate }}</td>
                <td>{{ item.amountPaid }}</td>
                <td>{{ item.balance }}</td>
                <td>{% if item.paymentDueDate %}{{ item.paymentDueDate|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <div class="btn-group">
                        <button data-toggle="dropdown" class="btn dropdown-toggle">Action <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                        <li>
                            <a href="{{ path('items_show', { 'item': item.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('items_edit', { 'item': item.id }) }}">edit</a>
                        </li>
                    </ul>
                        </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    <ul>
        <li>
            <a href="{{ path('items_new') }}"><button class="btn btn-link" type="button">Create a new entry</button></a>
        </li>
    </ul>
        </div></div>
{% endblock %}
