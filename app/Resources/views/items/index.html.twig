{% extends 'base.html.twig' %}

{% block body %}
    <h1>Items list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Startdate</th>
                <th>Enddate</th>
                <th>Amountpaid</th>
                <th>Balance</th>
                <th>Paymentduedate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td><a href="{{ path('items_show', { 'id': item.id }) }}">{{ item.id }}</a></td>
                <td>{{ item.name }}</td>
                <td>{{ item.amount }}</td>
                <td>{{ item.status }}</td>
                <td>{% if item.startDate %}{{ item.startDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ item.endDate }}</td>
                <td>{{ item.amountPaid }}</td>
                <td>{{ item.balance }}</td>
                <td>{% if item.paymentDueDate %}{{ item.paymentDueDate|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('items_show', { 'id': item.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('items_edit', { 'id': item.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('items_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
