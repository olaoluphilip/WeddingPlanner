{% extends 'base.html.twig' %}

{% block body %}
    {% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Item {% endblock %}
{% block entity2 %}Item {% endblock %}
{% block action %}Details {% endblock %}

{% block body %}
<div class="dr"><span></span></div>

<div class="row-fluid">

    <div class="span12">
        <div class="head clearfix">
            <div class="isw-grid"></div>
            <h1>Item's Details</h1>
        </div>
        <div class="block-fluid table-sorting clearfix">
            <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
                <tbody>
                <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ item.amount }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ item.status }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if item.startDate %}{{ item.startDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ item.endDate }}</td>
            </tr>
            <tr>
                <th>Amountpaid</th>
                <td>{{ item.amountPaid }}</td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ item.balance }}</td>
            </tr>
            <tr>
                <th>Paymentduedate</th>
                <td>{% if item.paymentDueDate %}{{ item.paymentDueDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('items_index') }}"><button class="btn btn-link" type="button">Back to the list</button></a>
        </li>
        <li>
            <a href="{{ path('items_edit', { 'item': item.id }) }}"><button class="btn btn-link" type="button">Edit</button></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <button class="btn" value="Delete">Delete</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
    </div>
{% endblock %}
