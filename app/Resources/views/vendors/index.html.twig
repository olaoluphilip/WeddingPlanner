{% extends 'base.html.twig' %}

{% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Vendors {% endblock %}
{% block entity2 %}Vendors {% endblock %}
{% block action %}List {% endblock %}

{% block body %}
<div class="dr"><span></span></div>

<div class="row-fluid">

    <div class="span12">
        <div class="head clearfix">
            <div class="isw-grid"></div>
            <h1>List of Vendors</h1>
        </div>
        <div class="block-fluid table-sorting clearfix">
            <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
                <thead>
                <tr>
                    <th><input type="checkbox" name="checkall"/></th>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Country</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Referedby</th>
                <th>Referalphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vendor in vendors %}
            <tr>
                <td><input type="checkbox" name="checkbox"/></td>
                <td><a href="{{ path('vendors_show', { 'vendor': vendor.id }) }}">{{ vendor.id }}</a></td>
                <td>{{ vendor.name }}</td>
                <td>{{ vendor.address }}</td>
                <td>{{ vendor.city }}</td>
                <td>{{ vendor.state }}</td>
                <td>{{ vendor.country }}</td>
                <td>{{ vendor.email }}</td>
                <td>{{ vendor.phone }}</td>
                <td>{{ vendor.referedBy }}</td>
                <td>{{ vendor.referalPhone }}</td>
                <td>
                    <div class="btn-group">
                        <button data-toggle="dropdown" class="btn dropdown-toggle">Action <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                        <li>
                            <a href="{{ path('vendors_show', { 'vendor': vendor.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vendors_edit', { 'vendor': vendor.id }) }}">edit</a>
                        </li>
                    </ul>
                        </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    <ul>
        <li>
            <a href="{{ path('vendors_new') }}"><button class="btn btn-link" type="button">Create a new entry</button></a>
        </li>
    </ul>
        </div>
</div>
{% endblock %}
