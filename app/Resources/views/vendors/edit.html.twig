{% extends 'base.html.twig' %}
{% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Vendors {% endblock %}
{% block entity2 %}Vendors {% endblock %}
{% block action %}Edit {% endblock %}
{% block body %}
    <div class="row-fluid">

        <div class="span12">
            <div class="head clearfix">
                <div class="isw-documents"></div>
                <h1>Vendors Edit</h1>
            </div>
            <div class="block-fluid">

                {{ form_start(form) }}
                <div class="row-form clearfix">
                    <div class="span2">Name:</div>
                    <div class="span5">{{ form_widget(edit_form.name ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Address:</div>
                    <div class="span5">{{ form_widget(edit_form.address ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">City:</div>
                    <div class="span5">{{ form_widget(edit_form.city ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">State:</div>
                    <div class="span5">{{ form_widget(edit_form.state ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Country:</div>
                    <div class="span5">{{ form_widget(edit_form.country ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">E-mail:</div>
                    <div class="span5">{{ form_widget(edit_form.email ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Mobile Phone:</div>
                    <div class="span5">{{ form_widget(edit_form.phone ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Refered By:</div>
                    <div class="span5">{{ form_widget(edit_form.referedBy ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Referal's Number:</div>
                    <div class="span5">{{ form_widget(edit_form.referalPhone ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Select Events:</div>
                    <div class="span2">{{ form_widget(edit_form.items, { 'attr': {'multiple': 'multiple'}} ) }}</div>
                </div>
                <div class="row-fluid">
                    <div class="span10">

                    </div>
                    <div class="span2">
                        <button type="submit" class="btn btn-block">Create Vendor</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            <ul>
                <li>
                    <a href="{{ path('vendors_index') }}"><button class="btn btn-link" type="button">Back to the list</button></a>
                </li>
            </ul>
        </div></div>
{% endblock %}
