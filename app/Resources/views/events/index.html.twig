{% extends 'base.html.twig' %}

{% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Events {% endblock %}
{% block entity2 %}Events {% endblock %}
{% block action %}List {% endblock %}

{% block body %}
<div class="dr"><span></span></div>

<div class="row-fluid">

    <div class="span12">
        <div class="head clearfix">
            <div class="isw-grid"></div>
            <h1>List of Events</h1>
        </div>
        <div class="block-fluid table-sorting clearfix">
            <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
                <thead>
                <tr>
                    <th><input type="checkbox" name="checkall"/></th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Venue</th>
                    <th>Numberofguests</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for event in events %}
                        <tr>
                            <td><input type="checkbox" name="checkbox"/></td>
                            <td><a href="{{ path('events_show', { 'event': event.id }) }}">{{ event.id }}</a></td>
                            <td>{{ event.name }}</td>
                            <td>{{ event.venue }}</td>
                            <td>{{ event.numberOfGuests }}</td>
                            <td>{% if event.dateOfEvent %}{{ event.dateOfEvent|date('Y-m-d') }}{% endif %}</td>
                            <td>
                                <div class="btn-group">
                                    <button data-toggle="dropdown" class="btn dropdown-toggle">Action <span class="caret"></span></button>
                                    <ul class="dropdown-menu">
                                    <li>
                                        <a href="{{ path('events_show', { 'event': event.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('events_edit', { 'event': event.id }) }}">edit</a>
                                    </li>
                                </ul>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <ul>
            <li>
                <a href="{{ path('events_new') }}"><button class="btn btn-link" type="button">Create a new entry</button></a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
