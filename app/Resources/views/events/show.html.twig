{% extends 'base.html.twig' %}
{% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Event {% endblock %}
{% block entity2 %}Event {% endblock %}
{% block action %}Details {% endblock %}

{% block body %}
<div class="dr"><span></span></div>

<div class="row-fluid">

    <div class="span12">
        <div class="head clearfix">
            <div class="isw-grid"></div>
            <h1>Event's Details</h1>
        </div>
        <div class="block-fluid table-sorting clearfix">
            <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
                <tbody>
                <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Venue</th>
                <td>{{ event.venue }}</td>
            </tr>
            <tr>
                <th>Numberofguests</th>
                <td>{{ event.numberOfGuests }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if event.dateOfEvent %}{{ event.dateOfEvent|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
</div>
    <ul>
        <li>
            <a href="{{ path('events_index') }}"><button class="btn btn-link" type="button">Back to the list</button></a>
        </li>
        <li>
            <a href="{{ path('events_edit', { 'event': event.id }) }}"><button class="btn btn-link" type="button">Edit</button></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <button class="btn" value="Delete">Delete</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
</div>
{% endblock %}
