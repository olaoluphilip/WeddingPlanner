{% extends 'base.html.twig' %}
{% block user %}Hi {% endblock %}
{% block breadcrumb %} Home Page {% endblock %}
{% block entity %}Events {% endblock %}
{% block entity2 %}Events {% endblock %}
{% block action %}Creation {% endblock %}
{% block body %}
    <div class="row-fluid">

        <div class="span12">
            <div class="head clearfix">
                <div class="isw-documents"></div>
                <h1>Event Creation</h1>
            </div>
            <div class="block-fluid">

                {{ form_start(form) }}
                <div class="row-form clearfix">
                    <div class="span2">Name:</div>
                    <div class="span5">{{ form_widget(form.name ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Venue:</div>
                    <div class="span5">{{ form_widget(form.venue ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Number of Guest:</div>
                    <div class="span5">{{ form_widget(form.numberOfGuests ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Date of Event:</div>
                    <div class="span1">{{ form_widget(form.dateOfEvent.day) }}</div>
                    <div class="span1">{{ form_widget(form.dateOfEvent.month) }}</div>
                    <div class="span1">{{ form_widget(form.dateOfEvent.year) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Select Guests:</div>
                    <div class="span5">{{ form_widget(form.guests ) }}</div>
                </div>
                <div class="row-form clearfix">
                    <div class="span2">Select Items:</div>
                    <div class="span2">{{ form_widget(form.items, { 'attr': {'multiple': 'multiple'}} ) }}</div>
                </div>

                {{ form_widget(form) }}
                <div class="row-fluid">
                    <div class="span10">

                    </div>
                    <div class="span2">
                        <button type="submit" class="btn btn-block">Create Event</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

        </div>

    </div>

    <div class="dr"><span></span></div>
    <ul>
        <li>
            <a href="{{ path('events_index') }}"><button class="btn btn-link" type="button">Back to the list</button></a>
        </li>
    </ul>
{% endblock %}
